<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#1A237E</item>
        <item name="colorAccent">#8C9EFF</item>
    </style>

    <style name="Intro5">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">100sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IntroWays">
        <item name="android:text">@string/intro_ways</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="IntroToSay">
        <item name="android:layout_marginTop">-10sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IntroHello">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="IntroWorld">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="LanguageList">
        <item name="android:background">#FAFAFA</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="LanguageContainer">
        <item name="android:background">@drawable/card</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="LanguageHeader">
        <item name="android:background">@drawable/bottom_border</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LanguageLogo">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="LanguageName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="QuizContainer">
        <item name="android:background">#FAFAFA</item>
    </style>

    <style name="Quiz">
        <item name="android:background">@drawable/card</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="QuizQuestionContainer">
        <item name="android:background">@drawable/bottom_border</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="QuizQuestion">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CodeExample">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

    <style name="QuizAnswers">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
